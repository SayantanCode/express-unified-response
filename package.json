{
  "name": "express-unified-response",
  "version": "1.0.1",
  "description": "Production-ready Express API response standardizer. Features centralized error handling, Mongoose error normalization, smart pagination, and DTO transforms.",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --clean --splitting --minify --out-dir dist",
    "lint": "eslint src",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepare": "npm run build",
    "release:patch": "npm version patch -m 'chore(release): %s' && git push origin HEAD --follow-tags",
    "release:minor": "npm version minor -m 'chore(release): %s' && git push origin HEAD --follow-tags",
    "release:major": "npm version major -m 'chore(release): %s' && git push origin HEAD --follow-tags"
  },
  "keywords": [
    "express-unified-response",
    "express-error-handler",
    "api-response-formatter",
    "mongoose-pagination-helper",
    "unified-api-response",
    "express-async-handler",
    "standardized-rest-response",
    "express-middleware",
    "mongoose-error-normalization",
    "dto-transform"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sayantanCode/express-unified-response.git"
  },
  "author": "Sayantan Chakraborty",
  "license": "MIT",
  "peerDependencies": {
    "express": "^4.0.0 || ^5.0.0",
    "mongoose": "^7.0.0 || ^8.0.0 || ^9.0.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.6",
    "@types/node": "^25.0.3",
    "@types/supertest": "^6.0.3",
    "eslint": "^9.0.0",
    "express": "^5.2.1",
    "mongoose": "^9.1.2",
    "supertest": "^7.2.2",
    "tsup": "^8.3.5",
    "typescript": "^5.7.0",
    "typescript-eslint": "^8.52.0",
    "vitest": "^4.0.16"
  }
}
